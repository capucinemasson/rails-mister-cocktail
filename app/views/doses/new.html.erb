<div class="container">
  <div class="row">
    <div class="col">
      <h1>Enter a new dose</h1>
        <%= simple_form_for [@cocktail, @dose] do |f| %>
          <%= f.input :description %>
          <%= f.association :ingredient %>
          <%= f.submit class: 'btn btn-primary' %>
        <% end %>
    </div>
  </div>
</div>
<%= link_to "Back to list", cocktails_path(@cocktail) %>
